{% extends 'base.html.twig' %}

{% block title %}Авторизация{% endblock %}
{% block body %}
<div class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<h1 class="text-center login-title">Регистрация</h1>
			{% if error %}
				<span class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
			{% endif %}
			<div class="account-wall">
				{{ form_start(form, {'attr': {'data-toggle': 'validator', 'role': 'form', 'class': 'form-signin'}}) }}
					{{ form_errors(form) }}
					{{ form_errors(form._username) }}
					{{ form_widget(form._username, { 'attr': { 'class': 'form-control', 'placeholder': 'E-mail адрес' } }) }}
					{{ form_errors(form._password) }}
					{{ form_widget(form._password, { 'attr': { 'data-minlength': 8, 'class': 'form-control', 'placeholder': 'Пароль' } }) }}
					{{ form_widget(form.save, {'attr': {'class': 'btn btn-lg btn-primary btn-block'}}) }}
				{{ form_end(form) }}
            </div>
			<a href="{{ path('login') }}" class="text-center new-account">Уже есть аккаунт?</a>
        </div>
    </div>
</div>
{% endblock %}

{% block navigation %}{% endblock %}
