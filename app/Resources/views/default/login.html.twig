{% extends 'base.html.twig' %}

{% block title %}Авторизация{% endblock %}
{% block body %}
<div class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<h1 class="text-center login-title">Вход</h1>
			{% if error %}
				<span class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
			{% endif %}
			<div class="account-wall">
				<form action="{{ path('login') }}" method="POST" class="form-signin">
					<input type="text" name="_username" value="{{ last_username }}" class="form-control" placeholder="E-mail адрес" required autofocus>
					<input type="password" name="_password" class="form-control" placeholder="Пароль" required>
					<button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
					{# <label class="checkbox pull-left">
						<input type="checkbox" value="remember-me"> Запомнить меня
					</label> #}
					{# <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span> #}
				</form>
            </div>
			{# <a href="#" class="text-center new-account">Create an account </a> #}
        </div>
    </div>
</div>
{% endblock %}
{% block modals %}{% endblock %}
{% block copyright %}{% endblock %}
{% block navigation %}{% endblock %}
